<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>{{blog.title}}:</h3>

      {{#if comments.length}}
  <div class="col-md-6 -list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}

    <div class="row mb-2">
      <div class="col-md-8">
          <p>{{blog.text}}</p>
        <p4>{{comment.id}}{{comment.text}}</p4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
      
  </div>
  {{/if}}
</div>

    <form class="form new-comment-form">
      
      <div class="form-group">
        <label for="blog-text">{{blog.title}}</label>
        <textarea class="form-input" id="comment-title" name="comment-title"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>




